$(function() {
  $('.reply-info').hover(
    function() {
      //マウスカーソルが重なった時の処理
      $(this).children('img').attr('src', "<%= image_path 'reply-hover.png' %>");
    },
    function() {
      //マウスカーソルが離れた時の処理
      $(this).children('img').attr('src', "<%= image_path 'reply.png' %>");
    }
  );
  $('.retweet-info').hover(
    function() {
      //マウスカーソルが重なった時の処理
      $(this).children('img').attr('src', "<%= image_path 'retweet-hover.png' %>");
      $(this).css({'color': 'rgba(0,200,0,1)'});
    },
    function() {
      //マウスカーソルが離れた時の処理
      $(this).children('img').attr('src', "<%= image_path 'retweet.png' %>");
      $(this).css({'color': 'black'});
    }
  );
  $('.favorite-info').hover(
    function() {
      //マウスカーソルが重なった時の処理
      $(this).children('img').attr('src', "<%= image_path 'favorite-hover.png' %>");
      $(this).css({'color': 'red'});
    },
    function() {
      //マウスカーソルが離れた時の処理
      $(this).children('img').attr('src', "<%= image_path 'favorite.png' %>");
      $(this).css({'color': 'black'});
    }
  );
});
