.row
  .col-12
    .text-center
      #app_description
        = image_tag('top-image-transparent.jpg', class: 'top-image')
        .text-center.mb-5.mt-3.mx-auto
          - if logged_in?
            = link_to 'Twitterリストへ', twitter_lists_path, class:'btn btn-success top-button'
