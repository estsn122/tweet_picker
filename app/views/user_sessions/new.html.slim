            = link_to 'Twitterログイン', auth_at_provider_path(:provider => :twitter), class:'btn btn-info btn-sm top-button'
            br
            = link_to 'ゲストユーザーでログイン', guest_path, class:'btn btn-success btn-sm top-button mt-3'
